@model List<GIGINOSTOP.Models.Categoria>

@{
    ViewBag.Title = "Lista delle Categorie";
}

<h2>Lista delle Categorie</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Nome</th>
        <th></th> <!-- Aggiungi una colonna per il dettaglio -->
        <th></th> <!-- Aggiungi una colonna per i pulsanti di modifica ed eliminazione -->
        <th></th>
    </tr>
    @foreach (var categoria in Model)
    {
        <tr>
            <td>@categoria.id</td>
            <td>@categoria.nome</td>
            <td>
                <a href="@Url.Action("Dettagli", "Categorie", new { id = categoria.id })" class="btn btn-dark">
                    Dettagli
                </a>
            </td>



            <td>
                @using (Html.BeginForm("Elimina", "Categorie", FormMethod.Post))
                {
                    @Html.Hidden("ID", categoria.id)
                    <button type="submit" class="btn btn-danger">Elimina</button>
                }
            </td>
        </tr>
    }
</table>

<div>
    @Html.ActionLink("Torna Indietro", "Index")
</div>