@{
    ViewBag.Title = "Bandai";
}



<main>
    <h1 class="text-center mt-3">Bandai Namco</h1>
    <div class="container">
        <!-- Sezione 1 -->
        <section class="section">
            <div class="row">
                <div class="col-md-9">
                    <p class="lead">
                        Bandai Namco Europe S.A.S. è uno dei più importanti editori e sviluppatori al mondo di contenuti interattivi per le principali piattaforme di gioco, tra cui console e PC.
                    </p>
                </div>
            </div>
        </section>

        <!-- Sezione 2 -->
        <section class="section">
            <div class="row">
                <div class="col-md-6">
                    <div class="CC-image">
                        <img class="img-fluid" src="https://www.gamestop.it/Views/Locale/Content/Images/landing.bandai/CategoryCard/Tekken/CategoryCard.jpg?rel=1" alt="Immagine di Tekken">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="CC-text">
                        <h4 class="headline">Il nuovissimo capitolo della serie TEKKEN</h4>
