@model IEnumerable<GIGINOSTOP.Models.Articoli>

@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>GameStop - Home</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
 
</head>
<body>
    <header>
        <!-- Includi qui l'header, se necessario -->
    </header>
    <div class="container-fluid px-0">
        <div id="carouselExample" class="carousel slide shadow">
            <div class="carousel-inner">
                @foreach (var articolo in Model.Where(a => a.in_offerta == true).Take(5))
                {
                    <div class="carousel-item @(articolo == Model.First() ? "active" : "")">
                        @if (!string.IsNullOrEmpty(articolo.immagine) && !articolo.immagine.StartsWith("~/Content/Assets"))
                        {
                            <a href="@Url.Action("Dettagli", "Home", new { id = articolo.id })">
                                <img src="@articolo.immagine" class="d-block w-100" alt="@articolo.nomearticolo">
                            </a>
                        }
                        else if (!string.IsNullOrEmpty(articolo.immagine) && articolo.immagine.StartsWith("~/Content/Assets"))
                        {
                            <a href="@Url.Action("Dettagli", "Home", new { id = articolo.id })">
                                <img src="@Url.Content(articolo.immagine)" class="d-block w-100" alt="@articolo.nomearticolo">
                            </a>
                        }
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

