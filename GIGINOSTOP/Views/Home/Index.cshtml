<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <a href="@Url.Action("Dettagli", "Home")">
                <img src="//www.gamestop.it/Views/Locale/Content/Images/PS5LiteGeneric/slider.jpg?rel=4" class="d-block w-100" alt="...">
            </a>
        </div>
        <div class="carousel-item">
            <a href="@Url.Action("Xbox", "Collezioni")">
                <img src="//www.gamestop.it/Views/Locale/Content/Images/landing.Xbox/HeroSliderConsole/slider.jpg" class="d-block w-100" alt="...">
            </a>
        </div>
        <div class="carousel-item">
            <a href="@Url.Action("Bandai", "Collezioni")">
                <img src="//www.gamestop.it/Views/Locale/Content/Images/landing.nintendo/MarioVsDonkey/Slider.jpg?rel=2" class="d-block w-100" alt="...">
            </a>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


