                                <li>@Html.ActionLink("Lista Categorie", "Index", "Categorie", new { area = "" }, new { @class = "dropdown-item" })</li>
                                <li>@Html.ActionLink("Aggiungi Categorie", "Aggiungi", "Categorie", new { area = "" }, new { @class = "dropdown-item" })</li>
                            </ul>
